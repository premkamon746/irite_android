<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_marginBottom="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="1dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:divider="@color/grey_60">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/no"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:padding="@dimen/text_margin_small"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/evidence"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/distance_1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/distance_2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/distance_3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/distance_4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/><!---->
        <TextView
            android:id="@+id/angle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin_small"
            android:layout_marginLeft="1dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_list"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <ImageView
            android:id="@+id/remark"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:layout_marginLeft="1dp"
            android:padding="@dimen/text_margin_small"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/info_icon_50"
            android:background="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="top"
                android:text="ลบ"
                android:background="@drawable/text_view_border"
                android:textColor="@android:color/white"/>
            <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="0dp" />
            <Button
                android:id="@+id/bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="top"
                android:text="แก้ไข"
                android:background="@drawable/text_view_border"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
