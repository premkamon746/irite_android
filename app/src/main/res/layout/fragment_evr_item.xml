<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/event_report_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/create_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/report_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/report_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/report_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_list"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/formButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ฟอร์ม"/>
                <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
                <Button
                    android:id="@+id/evidenceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เก็บหลักฐาน"/>
                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />
                <Button
                    android:id="@+id/transferButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ส่งมอบ"/>
            </LinearLayout>
            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black" />

</LinearLayout>