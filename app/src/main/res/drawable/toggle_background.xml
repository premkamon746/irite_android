<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for checked/on state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_400" />
            <!-- You can define other attributes like corner radius, stroke, etc. if needed -->
        </shape>
    </item>
    <!-- Background for unchecked/off state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_200" />
            <!-- You can define other attributes like corner radius, stroke, etc. if needed -->
        </shape>
    </item>
</selector>